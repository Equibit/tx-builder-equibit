{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Custom",
            "program": "${workspaceFolder}\\src\\generate-prefixes-base58.js",
            "useWSL" : true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "test/*.test.js",
                "--recursive"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "useWSL": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Utils Test",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "test/utils.test.js",
                "--recursive"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "useWSL": true
        }
    ]
}